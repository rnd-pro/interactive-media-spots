{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
        "es2017",
        "ESNext",
        "ESNext.Array",
        "DOM",
        "DOM.Iterable",
        "WebWorker"
      ],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 3,
    "types": [
      "./types/",
      "node"
    ],
    "noEmit": true
  },
  "include": [
    "**/*.js",
  ],
  "exclude": [
    "./web/*"
  ]
}